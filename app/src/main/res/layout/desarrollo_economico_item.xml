<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewItem"
    android:layout_margin="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageSocial"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"

            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageSocial"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginTop="@dimen/top_text_card"
            android:layout_marginRight="@dimen/normalPadding"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/darkTextColor"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/txtNombre"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/location" />

        <TextView

            android:id="@+id/txtLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNombre"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="@dimen/top_text_subtitle_card"
            android:layout_toEndOf="@id/location"
            android:text="Plac"
            android:textColor="@color/dashboard_subtitle"
            android:textSize="14dp" />


        <ImageView
            android:id="@+id/img_telefono"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/location"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginTop="15dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/telefonoimg" />

        <TextView
            android:id="@+id/numeroTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/img_telefono"
            android:text="telefono"
            android:textColor="@color/dashboard_subtitle"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/numeroTel"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Redes Sociales"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/View"
           android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Fb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/facebook" />

            <TextView
                android:id="@+id/txtFacebook"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/Fb"
                android:text="Facebook"
                android:textAlignment="center"
                android:textColor="@color/dashboard_subtitle"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/Ig"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/txtFacebook"
                android:src="@drawable/instagram" />

            <TextView
                android:id="@+id/txtInstagram"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/Ig"
                android:text="Instagram"
                android:textAlignment="center"
                android:textColor="@color/dashboard_subtitle"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/Wha"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/Ig"
                android:src="@drawable/whatsapp" />

            <TextView
                android:id="@+id/txtWhatsApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/Wha"
                android:text="WhatsApp"
                android:textColor="@color/dashboard_subtitle"
                android:textSize="12dp" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>